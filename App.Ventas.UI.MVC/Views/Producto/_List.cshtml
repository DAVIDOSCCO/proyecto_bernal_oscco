@model IEnumerable<App.Ventas.Models.Producto>

<div id="productoTableContainer" class="table-responsive">
    <table id="ProductoTable" class="table table-striped table-bordered table-hover">
        <thead>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Talla)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                
                <th> Acciones</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Talla)
                </td>
                <td>
                    @if (item.Imagen == null)
                    {
                        @Html.DisplayFor(modelItem => item.Imagen)
                    }
                    else
                    {
                        <img width="100" height="100" src="data:image/jpg;base64,@Convert.ToBase64String(item.Imagen)" />
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    <a href="#" class="btn btn-warning" onclick="appVentas.getModal('@Url.Action("Edit", new { id = item.id })','modal-lg');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-edit">&nbsp;&nbsp; Editar</span>
                    </a>

                    <a href="#" class="btn btn-warning" onclick="appVentas.getModal('@Url.Action("Edit", new { id = item.id })','modal-lg');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-edit">&nbsp;&nbsp; Editar WS</span>
                    </a>
                    <a href="#" class="btn btn-primary" onclick="appVentas.getModal('@Url.Action("Consumir", new { id = item.id })','');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-search">&nbsp;&nbsp; Ver WS</span>
                    </a>

                    <a href="#" class="btn btn-primary" onclick="appVentas.getModal('@Url.Action("Details", new { id = item.id })','modal-ls');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-search">&nbsp;&nbsp; Ver</span>
                    </a>

                    <a href="#" class="btn btn-danger" onclick="appVentas.getModal('@Url.Action("Delete", new { id = item.id })','modal-ls');"
                       data-toggle="modal" data-target="#modal-container">
                        <span class="fa fa-trash">&nbsp;&nbsp; Eliminar</span>
                    </a>
                </td>
            </tr>
            }

        </tbody>
    

    </table>

    </div>
