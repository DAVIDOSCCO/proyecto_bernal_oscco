 @model IEnumerable<App.Ventas.Models.Color>
 
    <div id="colorTableContainer" @* class="table-responsive" *@>
        <br />
        <br />
        <table id="colorTable" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NColor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NColor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>

                        <td>
                            <a href="#" class="btn btn-warning" onclick="appVentas.getModal('@Url.Action("Edit", new { id = item.id })');"
                               data-toggle="modal" data-target="#modal-container">
                                <span class="fa fa-edit">&nbsp;&nbsp; Editar</span>
                            </a>

                            <a href="#" class="btn btn-primary" onclick="appVentas.getModal('@Url.Action("Details", new { id = item.id })');"
                               data-toggle="modal" data-target="#modal-container">
                                <span class="fa fa-search">&nbsp;&nbsp; Ver</span>
                            </a>

                            <a href="#" class="btn btn-danger" onclick="appVentas.getModal('@Url.Action("Delete", new { id = item.id })');"
                               data-toggle="modal" data-target="#modal-container">
                                <span class="fa fa-trash">&nbsp;&nbsp; Eliminar</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
