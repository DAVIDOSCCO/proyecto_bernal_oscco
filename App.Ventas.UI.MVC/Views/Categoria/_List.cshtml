@model IEnumerable<App.Ventas.Models.Categoria>

<div id="categoriaTableContainer" @*class="table-responsive"*@>
    <br />
    <br />
    <table id="categoriaTable" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdTipoCategoria)
                </th>
                <th> Acciones</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdTipoCategoria)
                </th>
                <th> Acciones</th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTipoCategoria)
                    </td>
                    <td>
                        <a href="#" class="btn btn-warning" onclick="appVentas.getModal('@Url.Action("Edit", new { id = item.Id })');"
                            data-toggle="modal" data-target="#modal-container">
                            <span class="fa fa-edit">&nbsp;&nbsp; Editar</span>
                        </a>
                        
                        <a href="#" class="btn btn-primary" onclick="appVentas.getModal('@Url.Action("Details", new { id = item.Id })');"
                            data-toggle="modal" data-target="#modal-container">
                            <span class="fa fa-search">&nbsp;&nbsp; Ver</span>
                        </a>
                        
                        <a href="#" class="btn btn-danger" onclick="appVentas.getModal('@Url.Action("Delete", new { id = item.Id })');"
                            data-toggle="modal" data-target="#modal-container">
                            <span class="fa fa-trash">&nbsp;&nbsp; Eliminar</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>