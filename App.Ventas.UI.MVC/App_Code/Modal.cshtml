@helper GetModal(string title, string tamanio)
{
    <div class="modal fade" id="modal-container" tabindex="-1" aria-labelledby="myModalLabel" role="dialog">
        <div id="modal-dialog" class="modal-dialog @tamanio" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@title</h4>
                    <button class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
}